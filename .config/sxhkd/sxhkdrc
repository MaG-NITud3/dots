#closes selected window
super+q
	bspc node -c

#open xprop
ctrl+alt+p
	xprop

#force terminate program with SIGKILL
ctrl+alt+shift+x
	kill -9 $(xprop | grep -Po '(?<=(_NET_WM_PID\(CARDINAL\)\ =\ )).*')

#bspwm blank resepticle placer 
super+ctrl+{w,s,a,d}
	bspc node --presel-dir {north,south,west,east} -i

#put focused window to recepticle
super+d
	bspc node $(bspc query -N -n focused) -n $(bspc query -N -n .leaf.\!window) && bspc node focused -t tiled

#opens terminal
ctrl+alt+t
	kitty

#launch thunar
ctrl+alt+f
	thunar

#focus on a direction
super+{Up,Down,Left,Right}
	bspc node -f {north,south,west,east}

#swap windows
super+shift+{Up,Down,Left,Right}
	bspc node -s {north,south,west,east}

#send window do workspace
ctrl+super+{0-9}
	bspc node -d {0-9} --follow

#go to workspace
super+{1-5}
	bspc desktop -f {1-5}

#make window fullscreen
super+a
	bspc node -t \~fullscreen

#Disable touchpad
super+t
	$HOME/.local/scripts/toggle_touchpad.sh
	
#switch between tiling and floating
super+s
	bspc node -t \~floating
	
#restart bspwm
super+F5
	bspc wm -r

#resize windows to equal sizes
super+r
	bspc node @/ -B
	
#Manual Insertion Tiling
#super+ctrl+{w,s,a,d}
#	bspc node -p {north,south,west,east}

#launch rofi
alt+F1
	rofi -show combi

#launch browse
ctrl+alt+c
	chromium

#launch xkill
ctrl+alt+x
	xkill

#launch flameshot gui
Print
	flameshot gui
	
#screenshot full screen
ctrl+Print
	flameshot full -p /home/mag/Pictures/Screenshots -d 0

#launch rofi
super+k
	rofi -show combi

#launch rofi combi
super+p
	rofi -show drun

#launch rofi bluetooth menu
super+b
	rofi-bluetooth

#launch galculator
ctrl+alt+g
	galculator

#lauch rofi shutdown menu
super+l
	rofi -show power-menu -modi power-menu:rofi-power-menu

#launch tas script
#alt+Insert
#	/home/mag/tas.sh

#resize window (smart), stolen from github
shift + ctrl + super + {Left,Down,Up,Right}
  n=25; \
  { d1=left;   d2=right;  dx=-$n; dy=0;   \
  , d1=bottom; d2=top;    dx=0;   dy=$n;  \
  , d1=top;    d2=bottom; dx=0;   dy=-$n; \
  , d1=right;  d2=left;   dx=$n;  dy=0;   \
  } \
  bspc node --resize $d1 $dx $dy || bspc node --resize $d2 $dx $dy
